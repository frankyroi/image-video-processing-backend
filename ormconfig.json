  "username": "${DB_USERNAME}",
  "password": "${DB_PASSWORD}",
  "database": "${DB_NAME}",
  "entities": [
    "dist/entities/**/*.js"
  ],
  "migrations": [
    "dist/migrations/**/*.js"
  ],
  "cli": {
    "entitiesDir": "src/entities",
    "migrationsDir": "src/migrations"
  }
}